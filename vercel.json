{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/generate-pdf",
      "dest": "src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "functions": {
    "src/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "protection": {
    "files": [
      "/**"
    ]
  }
} 